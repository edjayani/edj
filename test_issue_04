import pytest

from tes_issue_03 import fit_transform


def test_1():
    exp_transformed_cities = [
        ('Moscow', [0, 0, 1]),
        ('New York', [0, 1, 0]),
        ('Moscow', [0, 0, 1]),
        ('London', [1, 0, 0]),
    ]
    assert(fit_transform(['Moscow', 'New York', 'Moscow', 'London']), exp_transformed_cities)


def test_2():
    exp_transformed_cities = [
        ('Moscow', [0, 0, 0, 1]),
        ('New York', [0, 0, 1, 0]),
        ('Moscow', [0, 0, 0, 1]),
        ('London', [0, 1, 0, 0]),
        ('Paris', [1, 0, 0, 0])
    ]
    assert(fit_transform(['Moscow', 'New York', 'Moscow', 'London', 'Paris']), exp_transformed_cities)


def test_3():
    exp_transformed_cities = [
        ('Moscow', [0, 0, 0, 1]),
        ('London', [0, 0, 1, 0]),
        ('New York', [0, 1, 0, 0]),
        ('Moscow', [0, 0, 0, 1]),
        ('Paris', [1, 0, 0, 0])
    ]
    assert (fit_transform(['Moscow', 'London', 'New York', 'Moscow', 'Paris']), exp_transformed_cities)


def test_4_diff_result():
    exp_transformed_cities = [
        ('Moscow', [0, 0, 1]),
        ('New York', [0, 1, 0]),
        ('Moscow', [0, 0, 1]),
        ('London', [1, 0, 0]),
    ]
    assert (fit_transform(['Moscow', 'London', 'New York', 'Moscow', 'Paris']), exp_transformed_cities)


def test_5_empty():
    with pytest.raises(TypeError):
        fit_transform()
